<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".PagePreferences" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50sp"
        android:text="@string/SectionPrefRayonRecherche"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/seekBarRayon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight=".65"
            android:max="100" />

        <TextView
            android:id="@+id/TVRayon"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight=".35"
            android:text="50 km"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40sp"
        android:text="@string/SectionPrefNbResultatVisible"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/seekBarNbMax"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight=".65"
            android:max="100" />

        <TextView
            android:id="@+id/TVMaxResult"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dip"
            android:layout_weight=".35"
            android:text="50"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
